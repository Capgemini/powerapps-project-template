{
  "name": "@capgemini/generator-cdspackage",
  "version": "0.6.2",
  "description": "A generator to scaffold Dynamics 365 packages and associated Azure DevOps project.",
  "author": {
    "name": "Capgemini",
    "email": "tom.ashworth@capgemini.com"
  },
  "files": [
    "common",
    "generators"
  ],
  "keywords": [
    "yeoman-generator"
  ],
  "devDependencies": {
    "@types/ejs": "^2.6.3",
    "@types/guid": "^1.0.0",
    "@types/inquirer": "0.0.43",
    "@types/node": "^10.12.18",
    "@types/strip-json-comments": "0.0.30",
    "@types/xml2js": "^0.4.4",
    "@types/yeoman-generator": "^3.0.1",
    "@types/yosay": "0.0.29",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-xo": "^0.25.0",
    "eslint-plugin-prettier": "^3.0.0",
    "husky": "^1.2.0",
    "jest": "^23.5.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.4",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0",
    "yo": "^2.0.5"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "@types/rimraf": "^2.0.2",
    "azure-devops-node-api": "^7.0.0",
    "chalk": "^2.1.0",
    "ejs": "^2.6.1",
    "glob": "^7.1.3",
    "glob-promise": "^3.4.0",
    "guid": "0.0.12",
    "inquirer": "^6.2.1",
    "renamer": "^1.1.1",
    "rimraf": "^2.6.3",
    "simple-git": "^1.107.0",
    "strip-json-comments": "^3.0.1",
    "xml2js": "^0.4.19",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest",
    "build": "tsc && xcopy \"src\\generators\\app\\definitions\" \"generators\\app\\definitions\" /I /y && xcopy \"src\\generators\\app\\templates\" \"generators\\app\\templates\" /I /S /y && xcopy \"src\\generators\\solution\\templates\" \"generators\\solution\\templates\" /I /S /y && xcopy \"src\\generators\\pluginassembly\\templates\" \"generators\\pluginassembly\\templates\" /I /S /y && xcopy \"src\\generators\\scripts\\templates\" \"generators\\scripts\\templates\" /I /S /y",
    "clean-debug": "del /S /q debug\\* && FOR /D %p IN (\"debug\\*\") DO rmdir \"%p\" /s /q"
  }
}
